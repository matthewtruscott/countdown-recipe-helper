{
    "name": "Countdown Recipe Helper",
    "description": "Pasted Recipe gets added to your cart!",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Open the popup"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "./static/js/content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ]
}